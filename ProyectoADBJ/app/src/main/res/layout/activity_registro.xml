<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuRegistro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Únete a nosotros!"
            android:textAlignment="center"
            android:textColor="#25364F"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombre"
                android:gravity="center_vertical"
                android:textColor="#25364F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txNombreRegistro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Apellidos"
                android:gravity="center_vertical"
                android:textColor="#25364F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txApellidosRegistro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Usuario"
                android:gravity="center_vertical"
                android:textColor="#25364F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txUserNameRegistro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round_border"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Contraseña"
                android:gravity="center_vertical"
                android:textColor="#25364F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txPasswordRegistro"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round_border"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbRepetirPassword"
                android:layout_width="90dp"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:text="Confirma tu Contraseña"
                android:gravity="center_vertical"
                android:textColor="#25364F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txRepetirPassword"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round_border"
                android:ems="10"

                android:inputType="textPassword"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Género"
                android:textColor="#25364F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rbMasculino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Masculino"
                    android:textColor="#25364F"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbFemenino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Femenino"
                    android:textColor="#25364F"
                    android:textStyle="bold" />


            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btCancelarSub"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round"
                android:backgroundTint="#ee5253"
                android:text="Cancelar"
                android:textColor="#25364F"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btAceptarSub"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round"
                android:backgroundTint="#1dd1a1"
                android:text="SIGUIENTE"
                android:textColor="#25364F"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>