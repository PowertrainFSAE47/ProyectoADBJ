<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuRegistro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="TUS DATOS"
            android:textAlignment="center"
            android:textColor="#25364F"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_round"
            android:backgroundTint="#8395a7"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lbNombreRegistrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Pedrito de Los palotes"
                android:textAlignment="center"
                android:textColor="#25364F"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbCorreoRegistrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="pedrito@lospalotes.net"
                android:textAlignment="center"
                android:textColor="#25364F"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:id="@+id/lblMediosPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="MEDIOS DE PAGO"
            android:textAlignment="center"
            android:textColor="#222f3e"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/rgPagos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rbCredito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="TARJETAS DE CREDITO"
                    android:textColor="#25364F"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbDebito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TARJETAS DE DEBITO"
                    android:textColor="#25364F"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbOnepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ONEPAY"
                    android:textColor="#25364F"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btNoPagar"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round"
                android:backgroundTint="#ee5253"
                android:text="Volver"
                android:textColor="#25364F"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btPagar"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_round"
                android:backgroundTint="#1dd1a1"
                android:text="Ir a pago"
                android:textColor="#25364F"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
